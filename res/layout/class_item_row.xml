<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <View
        android:id="@+id/indicatorView"
        android:layout_width="7dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:background="@drawable/indicator_rect"
    />

    <TextView
            android:id="@+id/courseItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7pt"
            android:text="Mobile Datenbanksysteme"
            android:textColor="@android:color/primary_text_light"
            android:textSize="18sp"
     />

    <TextView android:id="@+id/courseItemRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/courseItemName"
        android:paddingLeft="7pt"
        android:text="3.108"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="14sp"
    />

    <TextView
        android:id="@+id/courseItemTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/courseItemRoom"
        android:layout_alignParentRight="true"
        android:text="12:00 - 14:00"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="14sp"
    />

</RelativeLayout>