<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/class_item_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

    <View
            android:id="@+id/courseTimeline"
            android:layout_height="50dp"
            android:layout_width="2dp"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            android:background="@drawable/indicator_rect"
            />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/typeIndicatorLayout"
                    android:layout_centerVertical="true"
                    android:layout_width="15dp"
                    android:layout_height="15dp">

        <View
                android:id="@+id/indicatorView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/indicator_rect"
                />

        <TextView
                android:id="@+id/courseTypeText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="V"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="10sp"
                />

    </RelativeLayout>

    <TextView
            android:id="@+id/courseItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Mobile Datenbanksysteme"
            android:textColor="@android:color/primary_text_light"
            android:textSize="18sp"
            />

    <TextView android:id="@+id/courseItemRoom"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/courseItemName"
              android:layout_marginLeft="30dp"
              android:text="3.108"
              android:textColor="@android:color/secondary_text_light"
              android:textSize="14sp"
            />

    <TextView
            android:id="@+id/courseItemTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/courseItemRoom"
            android:layout_alignParentRight="true"
            android:text="12:00 - 14:00"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="14sp"
            />

</RelativeLayout>